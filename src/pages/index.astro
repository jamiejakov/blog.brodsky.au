---
import MdPreviewPostLayout from '@/layouts/MdPreviewPostLayout.astro';
import { getCollection } from 'astro:content';

import PageLayout from '../layouts/PageLayout.astro';

const pageTitle = 'Home Page';
const allPosts = await getCollection('blog');
---

<PageLayout pageTitle={pageTitle} className="flex flex-col gap-16">
  {allPosts.map((post) => <MdPreviewPostLayout frontmatter={post.data} id={post.id} />)}
</PageLayout>
