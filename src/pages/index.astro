---
import MdPreviewPostLayout from '@/layouts/MdPreviewPostLayout.astro';

import PageLayout from '../layouts/PageLayout.astro';
import { getAllPosts } from '../lib/sortedCollection';

const pageTitle = 'Home Page';
const allPosts = await getAllPosts();
---

<PageLayout pageTitle={pageTitle} className="flex flex-col gap-40">
  {allPosts.map((post) => <MdPreviewPostLayout post={post} />)}
</PageLayout>
